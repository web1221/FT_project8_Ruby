<h1>Update <%= @word.word() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="new_word">Change Word</label>
  <input class="form-control" name="new_word" type="text">

  <button type="submit">Update</button>
</form>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Word</button>
</form>
<p><a href="/words">Return to Word list</a></p>
