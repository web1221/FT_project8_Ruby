<h1 class="title">The Word Worm</h1>

<div class="content">

<h1>Word: <%=@definition.word.word %> </h1>
<h2>Definition: <%= @definition.definition%> </h2>

<form action="/words/<%= @definition.word.id %>/definition/<%=@definition.id%>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="definition_input">Edit definition</label>
  <input type="text" id="definition_input" name="definition_input" required>
  <button class="buttons" type="submit">Update definition</button>
</form>
<form action="/words/<%= @definition.word.id %>/definition/<%=@definition.id%>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button class="buttons" type="submit">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.word %></a>
</div>
